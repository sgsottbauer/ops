#!/usr/bin/env bash

#   ______           _             
#   |  _  \         | |            
#   | | | |___ _ __ | | ___  _   _ 
#   | | | / _ \ '_ \| |/ _ \| | | |
#   | |/ /  __/ |_) | | (_) | |_| |
#   |___/ \___| .__/|_|\___/ \__, |
#             | |             __/ |
#             |_|            |___/       
#                                                     
#   f o r   D o c k e r   S w a r m

# Usage: ./deploy [$(pwd)] [swarm.yml]

# Prepare shell for script execution
set -Eeo pipefail
trap cleanup SIGINT SIGTERM ERR EXIT
[[ "$0" != "$BASH_SOURCE" ]] && EXIT=return || EXIT=exit
cleanup() {
  trap - SIGINT SIGTERM ERR EXIT
  # script cleanup here
}

setup_colors() {
  if [[ -t 2 ]] && [[ -z "${NO_COLOR-}" ]] && [[ "${TERM-}" != "dumb" ]]; then
    NOFORMAT='\033[0m' RED='\033[0;31m\033[1m' GREEN='\033[0;32m\033[1m' ORANGE='\033[0;33m\033[1m' BLUE='\033[0;34m\033[1m' PURPLE='\033[0;35m\033[1m' CYAN='\033[0;36m\033[1m' YELLOW='\033[1;33m\033[1m'
    # Highlight            Warning                  Green / everything is ok     No Color (same as no format)
    HL='\033[0;34m\033[1m' WARN='\033[0;31m\033[1m' OK='\033[0;32m\033[1m'       NC='\033[0m'
  else
    NOFORMAT='' RED='' GREEN='' ORANGE='' BLUE='' PURPLE='' CYAN='' YELLOW=''
    HL='' WARN='' OK='' NC=''
  fi
}

msg() {
  echo >&2 -e "${1-}"
}

has_param() {
    local term="$1"
    shift
    for arg; do
        if [[ $arg == "$term" ]]; then
            return 0
        fi
    done
    return 1
}

setup_colors

# Set working directory
WORKING_DIR=${1:-$(pwd)}; [ -d "$1" ] || WORKING_DIR=$(pwd)
msg "üìÇ  Working from: $HL$WORKING_DIR$NC"

# Ensure swarm config is set
if [ -z "$SWARM_CONFIG" ]; then msg "üõë  Environment variable ${RED}SWARM_CONFIG$NC is required"; exit 1; fi

# Input validation
APPLICATION_NAME=$(echo $SWARM_CONFIG | jq -r '.application | select (.!=null)')
if [ -z "$APPLICATION_NAME" ]; then msg "üõë  Attribute ${RED}application$NC not set in swarm config"; exit 1; fi

REMOTE_HOST=$(echo $SWARM_CONFIG | jq -r '.remote_host | select (.!=null)')
if [ -z "$REMOTE_HOST" ]; then msg "üõë  Attribute ${RED}remote_host$NC not set in swarm config"; exit 1; fi

REMOTE_USER=$(echo $SWARM_CONFIG | jq -r '.remote_user | select (.!=null)')
if [ -z "$REMOTE_USER" ]; then msg "üõë  Attribute ${RED}remote_user$NC not set in swarm config"; exit 1; fi

REMOTE_PORT=$(echo $SWARM_CONFIG | jq -r '.remote_port | select (.!=null)')
REMOTE_PORT=${REMOTE_PORT:-22}

SYSTEM_NAME=$(echo $SWARM_CONFIG | jq -r '.system | select (.!=null)')
SYSTEM_NAME=${SYSTEM_NAME:-web}

DOMAIN=$(echo $SWARM_CONFIG | jq -r '.domain | select (.!=null)')
DOMAIN=${$DOMAIN:-not-set}

SWARM_ENVIRONMENT=$(echo $SWARM_CONFIG | jq -r '.environment | select (.!=null)')
ENVIRONMENT=${SWARM_ENVIRONMENT:-$ENVIRONMENT}

SWARM_NAME=$(echo $SWARM_CONFIG | jq -r '.swarm_name | select (.!=null)')
if [ -z "$SWARM_NAME" ]; then msg "üõë  Attribute ${RED}swarm_name$NC not set in swarm config"; exit 1; fi

STACK_NAME=$(echo $SWARM_CONFIG | jq -r '.stack_name | select (.!=null)')
if [ -z "$STACK_NAME" ]; then
  STACK_NAME=$SWARM_NAME
else
  STACK_NAME=$SWARM_NAME-$STACK_NAME
fi

# Read YAML file name from swarm configuration and fallback to 'swarm.yml'
SWARM_YAML=$(echo $SWARM_CONFIG | jq -r '.yaml_file | select (.!=null)')
SWARM_YAML=${SWARM_YAML:-swarm.yml}
[[ -n $2 && $2 != -* ]] && SWARM_YAML="$2" # Only use second parameter as stack if it is set and does not start with prefix "-"

# ---> Summary
msg ""
msg "App stack:           $HL${WORKING_DIR}/deployment/$SWARM_YAML$NC"
msg "Swarm name:          $HL$SWARM_NAME$NC"
msg "Stack name:          $HL$STACK_NAME$NC"
msg "Remote manager:      $HL${REMOTE_USER}@${REMOTE_HOST}:${REMOTE_PORT}$NC"
msg ""

# Parse version number
msg "‚ÑπÔ∏è   Preparing version number"
git fetch
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/protomodule/ops/main/helpers/generate-version.sh)" -- -s version
source version.sh

# Prevent production or pre-production deployments
if [[ "$(echo "$ENVIRONMENT" | tr [:upper:] [:lower:])" =~ "prod" ]] && ! has_param '-f' "$@"; then
  msg ""
  msg "‚úã  ${RED}ATTENTION: $YELLOW$ENVIRONMENT$NC or near production deployments are only allowed via pipeline!"
  exit 9
fi

# Prepare environment variables
rm -f "${WORKING_DIR}/deployment/.env.tmp_swarm_deployment"
CONFIG_DEPLOYMENT_VARS=$(echo $SWARM_CONFIG | jq -r $'.deployment_vars | select (.!=null) | to_entries|map("\(.key)=\'\(.value|tostring)\'")|.[]') # Single quotes for values to accept multiline SSH keys
if [ ! -z "$CONFIG_DEPLOYMENT_VARS" ]; then
  msg "üîß  Writing config deployment vars to .env file..."
  echo "$CONFIG_DEPLOYMENT_VARS" >> "${WORKING_DIR}/deployment/.env.tmp_swarm_deployment"
  echo "" >> "${WORKING_DIR}/deployment/.env.tmp_swarm_deployment" # Ensure newline at end of file
fi

if [ -f "${WORKING_DIR}/deployment/.env" ]; then
  msg "üîß  Copying variables from existing .env file..."
  cat "${WORKING_DIR}/deployment/.env" >> "${WORKING_DIR}/deployment/.env.tmp_swarm_deployment"
  echo "" >> "${WORKING_DIR}/deployment/.env.tmp_swarm_deployment" # Ensure newline at end of file
fi

if [ ! -z "$SWARM_DEPLOYMENT_VARS" ]; then
  msg "üîß  Writing external deployment variables to .env file..."
  echo "$SWARM_DEPLOYMENT_VARS" >> "${WORKING_DIR}/deployment/.env.tmp_swarm_deployment"
  echo "" >> "${WORKING_DIR}/deployment/.env.tmp_swarm_deployment" # Ensure newline at end of file
fi

# Prepare SSH key
echo "üìÇ  Creating temporary folder..."
mkdir -p "${WORKING_DIR}/__keys"
echo "üîë  Writing SSH key to temporary file..."
echo $SWARM_CONFIG | jq -r '.ssh_private_key' > "${WORKING_DIR}/__keys/swarm"

# Prepare Infisical environment-specific variables
ENV_UPPER=$(echo "${ENVIRONMENT}" | tr '[:lower:]' '[:upper:]')
INFISICAL_ENABLED_VAR="${ENV_UPPER}_INFISICAL_ENABLED"
INFISICAL_TOKEN_VAR="${ENV_UPPER}_INFISICAL_TOKEN"
INFISICAL_PATH_VAR="${ENV_UPPER}_INFISICAL_PATH"

# Run swarm deployment
export DEPLOY_TAG=${DOCKER_TAG:-$LATEST_TAG}
msg "üöÄ  Deploying version $GREEN$DEPLOY_TAG$NC to swarm..."
msg ""
msg "üìã  Environment variables passed to docker:"
msg "   REPOSITORY=$HL${REPOSITORY:-<not set>}$NC"
msg "   VERSION=$HL${VERSION:-<not set>}$NC"
msg "   COMMIT=$HL${COMMIT:-<not set>}$NC"
msg "   SHORT=$HL${SHORT:-<not set>}$NC"
msg "   BRANCH=$HL${BRANCH:-<not set>}$NC"
msg "   DOCKER_TAG=$HL${DOCKER_TAG:-<not set>}$NC"
msg "   LATEST_TAG=$HL${LATEST_TAG:-<not set>}$NC"
msg "   DEPLOY_TAG=$HL${DEPLOY_TAG:-<not set>}$NC"
msg "   CI_REGISTRY=$HL${CI_REGISTRY:-<not set>}$NC"
msg "   CI_REGISTRY_USER=$HL${CI_REGISTRY_USER:-<not set>}$NC"
msg "   AWS_ACCESS_KEY_ID=$HL${AWS_ACCESS_KEY_ID:+***set***}$NC"
msg "   ECR_REGISTRY=$HL${ECR_REGISTRY:-<not set>}$NC"
msg "   DOCKER_LOGIN_USERNAME=$HL${DOCKER_LOGIN_USERNAME:-<not set>}$NC"
msg "   DOCKER_LOGIN_REGISTRY=$HL${DOCKER_LOGIN_REGISTRY:-<not set>}$NC"
msg "   INFISICAL_ENABLED=$HL${!INFISICAL_ENABLED_VAR:-<not set>}$NC (from $INFISICAL_ENABLED_VAR)"
msg "   INFISICAL_PATH=$HL${!INFISICAL_PATH_VAR:-<not set>}$NC (from $INFISICAL_PATH_VAR)"
msg "   INFISICAL_API_URL=$HL${INFISICAL_API_URL:-<not set>}$NC"
msg "   APPLICATION=$HL${APPLICATION_NAME:-<not set>}$NC"
msg "   ENVIRONMENT=$HL${ENVIRONMENT:-unspecified}$NC"
msg "   ENVIRONMENT_NAME=$HL$(echo ${ENVIRONMENT:0:1} | tr '[:lower:]' '[:upper:]')${ENVIRONMENT:1}$NC"
msg "   SYSTEM=$HL${SYSTEM_NAME:-<not set>}$NC"
msg ""
docker run --rm \
  -v ${WORKING_DIR}/__keys:/keys \
  -v ${WORKING_DIR}/deployment:/deployment \
  -e REPOSITORY \
  -e VERSION \
  -e COMMIT \
  -e SHORT \
  -e BRANCH \
  -e DOCKER_TAG \
  -e LATEST_TAG \
  -e DEPLOY_TAG \
  -e CI_REGISTRY \
  -e CI_REGISTRY_USER \
  -e CI_REGISTRY_PASSWORD \
  -e AWS_ACCESS_KEY_ID \
  -e AWS_SECRET_ACCESS_KEY \
  -e ECR_REGISTRY \
  -e DOCKER_LOGIN_USERNAME \
  -e DOCKER_LOGIN_PASSWORD \
  -e DOCKER_LOGIN_REGISTRY \
  -e INFISICAL_ENABLED=${!INFISICAL_ENABLED_VAR} \
  -e INFISICAL_TOKEN=${!INFISICAL_TOKEN_VAR} \
  -e INFISICAL_PATH=${!INFISICAL_PATH_VAR} \
  -e INFISICAL_API_URL=${INFISICAL_API_URL} \
  -e APPLICATION=${APPLICATION_NAME} \
  -e ENVIRONMENT=${ENVIRONMENT:-unspecified} \
  -e ENVIRONMENT_NAME=$(echo ${ENVIRONMENT:0:1} | tr '[:lower:]' '[:upper:]')${ENVIRONMENT:1} \
  -e SYSTEM=${SYSTEM_NAME} \
  -e DOMAIN=${DOMAIN}
  docker:cli sh -c "
    # Prepare shell
    set -Eeo pipefail

    # Check if stack file exists
    if [ ! -f "/deployment/$SWARM_YAML" ]; then
      echo -e \"üõë  Swarm stack file $RED$SWARM_YAML$NC does not exist\";
      exit 99
    fi

    # Prepare SSH key
    chmod 600 /keys/*;
    eval \`ssh-agent\`;
    ssh-add /keys/swarm;

    # Add remote host to known hosts
    mkdir -p ~/.ssh;
    ssh-keyscan -H -p$REMOTE_PORT $REMOTE_HOST >> ~/.ssh/known_hosts;

    # Run deployment on remote manager
    export DOCKER_HOST=ssh://$REMOTE_USER@$REMOTE_HOST:$REMOTE_PORT;

    # Login to private registry if configured
    ## GitLab CI Docker login
    if [ -z \"\$CI_REGISTRY_USER\" ] || [ -z \"\$CI_REGISTRY_PASSWORD\" ] || [ -z \"\$CI_REGISTRY\" ]; then
      echo \"‚è≠   Skipping GitLab Docker login (not configured)\";
    else
      echo -e \"üîë  Logging in to ${YELLOW}GitLab Docker registry$NC (\$CI_REGISTRY)\";
      echo \"\$CI_REGISTRY_PASSWORD\" | docker login -u \"\${CI_REGISTRY_USER}\" --password-stdin \${CI_REGISTRY};
    fi

    ## AWS
    if [ -z \"\$AWS_ACCESS_KEY_ID\" ] || [ -z \"\$AWS_SECRET_ACCESS_KEY\" ] || [ -z \"\$ECR_REGISTRY\" ]; then
      echo \"‚è≠   Skipping AWS ECR login (not configured)\";
    else
      echo -e \"üîë  Logging in to ${YELLOW}AWS ECR$NC\";
      apk add -q aws-cli;
      aws ecr get-login-password --region eu-central-1 | docker login --username AWS --password-stdin \$ECR_REGISTRY;
    fi

    ## Generic Docker registry
    if [ -z \"\$DOCKER_LOGIN_USERNAME\" ] || [ -z \"\$DOCKER_LOGIN_PASSWORD\" ] || [ -z \"\$DOCKER_LOGIN_REGISTRY\" ]; then
      echo \"‚è≠   Skipping additional Docker login (not configured)\";
    else
      echo -e \"üîë  Logging in to ${YELLOW}Docker registry$NC (\$DOCKER_LOGIN_REGISTRY)\";
      echo \"\$DOCKER_LOGIN_PASSWORD\" | docker login -u \"\${DOCKER_LOGIN_USERNAME}\" --password-stdin \${DOCKER_LOGIN_REGISTRY};
    fi

    # Sourcing environment variables
    if [ -f "/deployment/.env.tmp_swarm_deployment" ]; then
      echo -e \"üîß  Sourcing deployment variables from ${HL}.env$NC file...\";
      set -a; source /deployment/.env.tmp_swarm_deployment; set +a
    fi

    # Store environment variables in /run/env to load them into Docker secrets
    echo -e \"üí≤  Writing environment variables to ${YELLOW}/run/env$NC ...\";
    mkdir -p /run/env;
    mkdir -p /run/hash;
    env -0 | while IFS='=' read -r -d '' n v; do
      echo \"\$v\" > \"/run/env/\$n\";
      sha1sum \"/run/env/\$n\" | head -c 7 > \"/run/hash/\${n}\";
    done

    for filepath in /run/hash/*; do
      export \$(basename \$filepath)__HASH=\$(cat \$filepath)
    done

    # Run deployment on remote manager
    echo -e \"üê≥  Running stack deploy for $GREEN$STACK_NAME$NC\"
    echo ""
    docker --log-level debug stack deploy --prune --detach=false --resolve-image=always --with-registry-auth -c /deployment/$SWARM_YAML $STACK_NAME
"

# Cleanup
rm -rf ${WORKING_DIR}/__keys ${WORKING_DIR}/deployment/.env.tmp_swarm_deployment

msg ""
msg "üèÅ  ${OK}Swarm has been updated$NC"
